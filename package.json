{
  "name": "vertx-web-site",
  "version": "4.0.0",
  "description": "The Vert.x website",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next",
    "build": "next build && npm run scraper && cp public/docs/index.json out/docs/index.json",
    "lint": "next lint",
    "postinstall": "npm run scraper:install && npm run update-docs:install",
    "scraper": "cd scraper && npm run run && cd ..",
    "scraper:install": "cd scraper && npm i",
    "start": "next start",
    "update-docs": "cd docs && npm run update-docs",
    "update-docs:install": "cd docs && npm i"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vertx-web-site/vertx-web-site.git"
  },
  "license": "Apache-2.0",
