{
  "plugins": [
    "@trivago/prettier-plugin-sort-imports",
    "prettier-plugin-tailwindcss"
  ],
  "overrides": [
    {
      "files": "*.ts",
      "options": {
        "importOrderParserPlugins": ["typescript", "jsx"]
      }
    },
    {
      "files": "*.d.ts",
      "options": {
        "importOrderParserPlugins": [
          "[\"typescript\", { \"dts\": true }]",
          "jsx"
        ]
      }
    }
  ],
  "semi": false,
  "trailingComma": "all",
  "arrowParens": "avoid",
  "importOrderSortSpecifiers": true,
  "importOrderGroupNamespaceSpecifiers": true
}
